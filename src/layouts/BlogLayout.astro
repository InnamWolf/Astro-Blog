const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!--aca ocupamos el titulo del frontmatter -->
    <ClientRouter />
  </head>
  <body class="bg-gray-900">
    <a href="/">Regresar</a>
    <main class="mb-10 max-w-5xl mx-auto p-2">
      <slot />
    </main>
  </body>
</html>
